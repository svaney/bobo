<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/profile_bar_wrapper_height">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/profile_bar_card_height"
        android:layout_gravity="center"
        android:layout_margin="@dimen/item_default_small_margin">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/item_default_margin"
            android:layout_marginRight="@dimen/item_default_margin">

            <LinearLayout
                android:id="@+id/right_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profile_btn"
                    android:layout_width="@dimen/profile_bar_icon_size"
                    android:layout_height="@dimen/profile_bar_icon_size"
                    android:layout_gravity="center_horizontal"
                    android:background="?selectableItemBackgroundBorderless"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_account_circle" />

                <ImageView
                    android:id="@+id/setting_btn"
                    android:layout_width="@dimen/profile_bar_icon_size"
                    android:layout_height="@dimen/profile_bar_icon_size"
                    android:layout_marginLeft="@dimen/item_default_margin"
                    android:background="?selectableItemBackgroundBorderless"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_settings_black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/left_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/right_container"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/balance_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_bar_balance" />

                <TextView
                    android:id="@+id/blocked_balance_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_bar_clocked_balance" />


                <Button
                    android:id="@+id/login_register_btn"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/log_in_register" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>