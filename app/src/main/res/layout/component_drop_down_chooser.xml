<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/item_default_margin"
        android:layout_marginTop="@dimen/item_default_small_margin">

        <TextView
            android:id="@+id/inside_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="16dp"
            android:layout_height="17dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/inside_text"
            android:src="@drawable/ic_triangles_up_down" />

    </RelativeLayout>

</LinearLayout>

