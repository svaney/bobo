<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="74dp"
    sothree:umanoShadowHeight="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.bobo.gmargiani.bobo.ui.activites.NewOrderActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/products_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                </android.support.v7.widget.RecyclerView>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/next_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="24dp"
                    android:src="@drawable/ic_arrow_forward_white"
                    android:transitionName="fab_button" />

            </FrameLayout>
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_default_margin">

            <Button
                android:id="@+id/add_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/button_text_save" />

            <Button
                android:id="@+id/add_picture_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/add_button"
                android:text="@string/button_text_add_picture" />


            <Button
                android:id="@+id/dismiss_button"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/button_text_cancel" />

        </RelativeLayout>

        <Button
            android:id="@+id/new_product_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_default_margin"
            android:enabled="true"
            android:text="@string/add_product" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/dummy_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="true" />


                    <EditText
                        android:id="@+id/product_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/item_default_margin"
                        android:layout_marginLeft="@dimen/item_default_margin"
                        android:layout_marginRight="@dimen/item_default_margin"
                        android:hint="@string/product_dialog_title_product_title"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLength="60"
                        android:maxLines="1" />


                    <LinearLayout
                        android:id="@+id/radio_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/item_default_margin"
                        android:orientation="vertical">

                        <include layout="@layout/component_horizontal_divider" />


                        <RadioGroup
                            android:id="@+id/radio_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_default_margin"
                            android:layout_marginRight="@dimen/item_default_margin"
                            android:layout_marginTop="@dimen/item_default_margin">

                            <RadioButton
                                android:id="@+id/radio_other"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/product_dialog_radio_other_title" />

                            <RadioButton
                                android:id="@+id/radio_weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/item_default_small_margin"
                                android:text="@string/product_dialog_radio_weight_title" />

                            <RadioButton
                                android:id="@+id/radio_volume"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/item_default_small_margin"
                                android:text="@string/product_dialog_radio_volume_title" />


                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/input_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/item_default_margin"
                        android:orientation="vertical">

                        <include layout="@layout/component_horizontal_divider" />

                        <RelativeLayout
                            android:id="@+id/size_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_default_margin"
                            android:layout_marginRight="@dimen/item_default_margin"
                            android:layout_marginTop="@dimen/item_default_margin">

                            <com.bobo.gmargiani.bobo.ui.views.DropDownChooser
                                android:id="@+id/drop_down"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true" />


                            <EditText
                                android:id="@+id/amount_input_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/item_default_small_margin"
                                android:layout_toLeftOf="@id/drop_down"
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                android:lines="1"
                                android:maxLength="5" />


                        </RelativeLayout>

                        <EditText
                            android:id="@+id/other_comment_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/item_default_margin"
                            android:hint="@string/new_product_comment"
                            android:imeOptions="actionDone"
                            android:inputType="text|textMultiLine|textCapSentences"
                            android:maxLength="500"
                            android:maxLines="4" />

                    </LinearLayout>

                    <include layout="@layout/component_horizontal_divider" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/item_default_margin"
                        android:layout_marginTop="@dimen/item_default_margin"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/product_image"
                            android:layout_width="100dp"
                            android:layout_height="70dp"
                            android:scaleType="centerInside"
                            android:visibility="gone" />

                    </LinearLayout>


                </LinearLayout>
            </ScrollView>


        </FrameLayout>

    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>