<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/products_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/next_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="-26dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="-26dp"
                android:src="@drawable/ic_arrow_forward_white"
                android:transitionName="fab_button" />


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/item_default_small_margin"
                android:layout_marginLeft="@dimen/item_default_small_margin"
                android:layout_marginRight="@dimen/item_default_small_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/new_product_button"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/item_default_small_margin"
                        android:enabled="true"
                        android:text="@string/button_text_add_product" />

                    <EditText
                        android:id="@+id/order_description_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/item_default_small_margin"
                        android:gravity="top"
                        android:hint="@string/hint_enter_order_description_here"
                        android:lines="2"
                        android:padding="@dimen/item_default_small_margin" />
                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </FrameLayout>


</android.support.constraint.ConstraintLayout>
