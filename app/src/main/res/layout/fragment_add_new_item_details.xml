<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_default_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/item_default_margin"
    android:paddingTop="@dimen/item_default_margin">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/dummy_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_default_small_margin"
                android:layout_marginLeft="@dimen/item_default_margin"
                android:text="@string/product_dialog_title_product_title"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_default_margin"
                android:layout_marginLeft="@dimen/item_default_margin"
                android:layout_marginRight="@dimen/item_default_margin"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:lines="1"
                android:maxLength="60"
                android:maxLines="1" />

            <include layout="@layout/component_horizontal_divider" />

            <TextView
                android:id="@+id/comment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_default_small_margin"
                android:layout_marginLeft="@dimen/item_default_margin"
                android:layout_marginTop="@dimen/item_default_margin"
                android:text="@string/common_text_comment"
                android:textColor="@color/colorAccent"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/other_comment_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/item_default_margin"
                android:layout_marginLeft="@dimen/item_default_margin"
                android:layout_marginRight="@dimen/item_default_margin"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine"
                android:maxLength="500"
                android:maxLines="4" />

            <include layout="@layout/component_horizontal_divider" />

            <com.bobo.gmargiani.bobo.ui.views.AmountIncrementView
                android:id="@+id/amount_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_default_small_margin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_default_margin"
                android:orientation="vertical">

                <include layout="@layout/component_horizontal_divider" />

                <CheckBox
                    android:id="@+id/size_check_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/item_default_margin"
                    android:layout_marginLeft="@dimen/item_default_margin"
                    android:layout_marginRight="@dimen/item_default_margin"
                    android:layout_marginTop="@dimen/item_default_margin"
                    android:text="@string/product_dialog_specify_size" />


                <LinearLayout
                    android:id="@+id/input_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/item_default_margin"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RadioGroup
                        android:id="@+id/radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/radio_weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/item_default_small_margin"
                            android:padding="@dimen/item_default_small_margin"
                            android:text="@string/product_dialog_radio_weight_title" />

                        <RadioButton
                            android:id="@+id/radio_volume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/item_default_small_margin"
                            android:text="@string/product_dialog_radio_volume_title" />


                    </RadioGroup>

                    <TextView
                        android:id="@+id/size_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/item_default_small_margin"
                        android:layout_marginTop="@dimen/item_default_margin"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/item_default_margin"
                        android:layout_marginRight="@dimen/item_default_margin">

                        <com.bobo.gmargiani.bobo.ui.views.DropDownChooser
                            android:id="@+id/drop_down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />


                        <EditText
                            android:id="@+id/amount_input_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/item_default_small_margin"
                            android:layout_toLeftOf="@id/drop_down"
                            android:imeOptions="actionDone"
                            android:inputType="numberDecimal"
                            android:lines="1"
                            android:maxLength="5" />


                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/component_horizontal_divider" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_default_margin"
                android:orientation="vertical">

                <Button
                    android:id="@+id/add_picture_button"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_text_add_picture" />

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/item_default_margin"
                    android:layout_marginLeft="@dimen/item_default_small_margin"
                    android:layout_marginTop="@dimen/item_default_margin"
                    android:adjustViewBounds="true"
                    android:maxHeight="100dp"
                    android:maxWidth="100dp"
                    android:scaleType="centerInside"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <include layout="@layout/component_horizontal_divider" />

    <RelativeLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_default_margin"
        android:layout_marginTop="@dimen/item_default_small_margin">

        <Button
            android:id="@+id/add_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/button_text_save" />

        <Button
            android:id="@+id/dismiss_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/add_button"
            android:text="@string/button_text_cancel" />

        <Button
            android:id="@+id/delete_button"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/dismiss_button"
            android:text="@string/button_text_delete" />

    </RelativeLayout>


</LinearLayout>