<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/statement_item_height"
    android:layout_marginBottom="@dimen/item_default_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/statement_image"
            android:layout_width="@dimen/statement_item_height"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_default_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/statement_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/statement_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_default_small_margin"
                android:ellipsize="end"
                android:maxLines="3" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>