<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/focus_thief"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <LinearLayout
        android:id="@+id/toolbar_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/toolbar_filter"
            android:layout_width="@dimen/toolbar_ic_size"
            android:layout_height="@dimen/toolbar_ic_size"
            android:layout_marginRight="@dimen/item_default_margin"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true" />

        <ImageView
            android:id="@+id/toolbar_favorite"
            android:layout_width="@dimen/toolbar_ic_size"
            android:layout_height="@dimen/toolbar_ic_size"
            android:layout_marginRight="@dimen/item_default_margin"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true" />

        <ImageView
            android:id="@+id/toolbar_inbox"
            android:layout_width="@dimen/toolbar_ic_size"
            android:layout_height="@dimen/toolbar_ic_size"
            android:layout_marginRight="@dimen/item_default_margin"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/item_default_margin"
        android:layout_toLeftOf="@id/toolbar_icons">

        <EditText
            android:id="@+id/toolbar_et"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:paddingBottom="2dp"
            android:paddingLeft="@dimen/item_default_small_margin"
            android:paddingRight="36dp"
            android:paddingTop="2dp"
            android:textSize="@dimen/text_size_medium" />

        <ImageView
            android:id="@+id/toolbar_search"
            android:layout_width="@dimen/toolbar_ic_size"
            android:layout_height="@dimen/toolbar_ic_size"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/item_default_small_margin"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:src="@drawable/ic_search" />


    </FrameLayout>

</RelativeLayout>